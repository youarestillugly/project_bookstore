<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="/css/adminStyle.css">
    <script defer src="/js/adminScript.js"></script>
</head>
<body>
    <nav class="navbar">
        <div class="nav-brand">Bookstore Admin</div>
        <ul class="nav-links">
            <li><a href="/admin/dashboard">Dashboard</a></li>
            <li><a href="/view-books">View Books</a></li>
            <li><a href="/logout">Logout</a></li>
        </ul>
    </nav>


    <main class="container">
        <h1>Welcome, <%= user.name %></h1>
        <section class="form-section">
            <h2>Add a New Book</h2>
            <form action="/admin/add-book" method="POST" class="book-form">
                <input type="text" name="title" placeholder="Title" required>
                <input type="text" name="author" placeholder="Author" required>
                <input type="number" name="price" step="0.01" placeholder="Price" required>
                <button type="submit">Add Book</button>
            </form>
        </section>


        <section class="book-list">
            <h2>Books List</h2>
            <ul>
                <% books.forEach(book => { %>
                    <li><strong>Title: <%= book.title %></strong> by <%= book.author %> - Price: Nu.<%= book.price %></li>
                <% }) %>
            </ul>
        </section>
    </main>
</body>
</html>
